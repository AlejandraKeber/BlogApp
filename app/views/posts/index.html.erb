<%= render 'shared/user', user: @user %>
<% @posts.each do |post| %>
  <%= link_to user_post_path(@user, post) do %>
  <%= render partial: 'shared/post', locals: { post: post}  %>
  <% end %>
  <div class="comments">
    <% post.recent_comments.each do |comment| %>
      <%= render partial: 'shared/comment', locals: { comment: comment } %>
    <% end %>
  </div>
<% end %>


